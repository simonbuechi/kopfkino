rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if the user is signed in
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Helper function to check if the user is accessing their own data
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Match the users collection and their documents
    match /users/{userId} {
      // Allow user to read/write their own document (if we used it for profiles)
      allow read, write: if isSignedIn() && isOwner(userId);

      // Match all subcollections (locations, scenes, shots)
      match /{collectionName}/{document=**} {
        allow read, write: if isSignedIn() && isOwner(userId);
      }
    }
    
    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
